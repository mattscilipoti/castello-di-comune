[diff]
  renamelimit = 0
  tool = kdiff3

[gc]
  auto = 1
  
[merge]
  tool = kdiff3
  log = true
  prompt = false

[push]
  # only push current branch
  default = tracking
	
# DO NOT EDIT BELOW THIS LINE
[color]
	diff = auto
	status = auto
	branch = auto
	
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	
[alias]
	ci = commit
  c = commit -m
  a = add
  di = diff
  dic = diff --cached
  pl = pull
  ps = push
  plre = pull --rebase
	st = status
  out = log origin..HEAD
	svnpull = svn rebase
  svnpush = svn dcommit
  # commits not pushed
  unpushed = log HEAD --not --remotes
  # commits in current branch, but not compared branch
  # `git convergence other_branch`
  divergence = log HEAD --root

[achievement]
	upload = true
